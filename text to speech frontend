<body>
    <div class="container">
        <h1>Text to Speech</h1>
        <textarea id="text-input" placeholder="Enter text here"></textarea>
        <br>
        <button id="convert-btn">Convert to Speech</button>
        <br>
        <audio id="audio-player" controls></audio>
    </div>

    <script>
        $(document).ready(function() {
            $('#convert-btn').click(function() {
                var text = $('#text-input').val();

                if (text.trim() !== "") {
                    $.ajax({
                        url: 'http://127.0.0.1:80/text-to-speech',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ text: text }),
                        success: function(response) {
                            if (response.speech_url) {
                                $('#audio-player').attr('src','C:/Users/Lenovo/OneDrive/Desktop/menubased/' + response.speech_url).trigger('play');
                            } else if (response.error) {
                                alert("Error: " + response.error);
                            }
                        },
                        error: function(xhr, status, error) {
                            console.log("AJAX Error:", error);
                            alert("An error occurred while processing the request.");
                        }
                    });
                } else {
                    alert("Please enter some text!");
                }
            });
        });
    </script>
